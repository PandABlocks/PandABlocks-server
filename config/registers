    INPA        0
    INPB        1
    INPC        2
    INPD        3
    INPE        4
    VAL         5
    FUNC        6

SRGATE       2
    SET         0
    RESET       1
    VAL         2
    SET_EDGE    3
    RESET_EDGE  4
    FORCE_STATE 5

DIV          3
